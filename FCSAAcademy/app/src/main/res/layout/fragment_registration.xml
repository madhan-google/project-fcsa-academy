<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1"
    android:forceDarkAllowed="false"
    tools:context=".Fragments.RegistrationFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <ImageView
            android:id="@+id/image_view"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/name_text"
            style="@style/InputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/image_view"
            app:endIconDrawable="@drawable/ic_clear"
            app:endIconMode="clear_text"
            app:helperText="Mandatory"

            >

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="Name of the Student"
                android:padding="8dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/father_name_text"
            style="@style/InputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/name_text"
            android:layout_marginTop="5dp"

            android:theme="@style/InputLayout"
            app:endIconDrawable="@drawable/ic_clear"
            app:endIconMode="clear_text"
            app:helperText="Mandatory">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="Father's Name"
                android:padding="8dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/mother_name_text"
            style="@style/InputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/father_name_text"
            android:layout_marginTop="5dp"
            android:theme="@style/InputLayout"
            app:endIconDrawable="@drawable/ic_clear"
            app:endIconMode="clear_text"
            app:helperText="Mandatory">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="Mother's Name"
                android:padding="8dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/dob_text"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/mother_name_text"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/round_bg"
            android:gravity="center_vertical"
            android:hint="Date of Birth*"
            android:inputType="date"
            android:padding="8dp"
            android:textSize="18sp" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/mail_text"
            style="@style/InputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/dob_text"
            android:layout_marginTop="5dp"
            android:theme="@style/InputLayout"
            app:endIconDrawable="@drawable/ic_clear"
            app:endIconMode="clear_text"
            app:helperText="Mandatory">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="Mail ID"
                android:inputType="textEmailAddress"
                android:padding="8dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/number_text"
            style="@style/InputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/mail_text"
            android:layout_marginTop="5dp"
            android:theme="@style/InputLayout"
            app:endIconDrawable="@drawable/ic_clear"
            app:endIconMode="clear_text"
            app:helperText="Mandatory"

            >

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="Mobile Number"
                android:inputType="number"
                android:padding="8dp" />
        </com.google.android.material.textfield.TextInputLayout>
        <!--class-->
        <Spinner
            android:id="@+id/class_text"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/number_text"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/round_bg"
            android:padding="8dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/college_text"
            style="@style/InputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/class_text"

            android:layout_marginTop="5dp"
            android:theme="@style/InputLayout"
            app:endIconDrawable="@drawable/ic_clear"
            app:endIconMode="clear_text"
            app:helperText="Mandatory">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="School Name"
                android:padding="8dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <Spinner
            android:id="@+id/board_text"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/college_text"
            android:layout_marginBottom="10dp"
            android:background="@drawable/round_bg"
            android:padding="8dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/town_text"
            style="@style/InputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/board_text"
            android:layout_marginTop="5dp"

            android:theme="@style/InputLayout"
            app:endIconDrawable="@drawable/ic_clear"
            app:endIconMode="clear_text"
            app:helperText="Mandatory">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="Town"
                android:padding="8dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/district_text"
            style="@style/InputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/town_text"

            android:layout_marginTop="5dp"
            android:theme="@style/InputLayout"
            app:endIconDrawable="@drawable/ic_clear"
            app:endIconMode="clear_text"
            app:helperText="Mandatory">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="District"
                android:padding="8dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <Spinner
            android:id="@+id/state_text"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/district_text"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/round_bg"
            android:padding="8dp" />

        <Spinner
            android:id="@+id/opting_course_text"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/state_text"
            android:layout_marginBottom="10dp"
            android:background="@drawable/round_bg"
            android:padding="8dp" />

        <Spinner
            android:id="@+id/test_text"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/opting_course_text"
            android:layout_marginBottom="10dp"
            android:background="@drawable/round_bg"
            android:padding="8dp"
            android:visibility="gone" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/register_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/opting_course_text"
            android:layout_centerHorizontal="true"
            android:text="register"
            app:cornerRadius="5dp"
            app:icon="@drawable/ic_reg" />
    </RelativeLayout>

</ScrollView>